active_master_role  writer

<host default>
  cluster_interface    <%= scope.lookupvar("cluster_interface") %>

  pid_path        /var/run/mmm_agentd.pid
  bin_path        /usr/lib/mysql-mmm/

    replication_user        <%= scope.lookupvar("replication_user") %>
    replication_password    <%= scope.lookupvar("replication_password") %>

  agent_user        <%= scope.lookupvar("agent_user") %>
  agent_password      <%= scope.lookupvar("agent_password") %>
</host>

<% scope.lookupvar("masters").each do |master| -%>
<host <%= master[0] %>>
  ip            <%= master[1] %>
  mode          master
  peer          <%= master[2] %>
</host>
<% end -%>

<% scope.lookupvar("slaves").each do |slave| -%> 
<host <%= slave[0] %>>
  ip            <%= slave[1] %>
  mode          slave
</host>
<% end -%>

<role writer>
  hosts          <%= master_names.flatten.join(', ') %>
  ips            <%= scope.lookupvar("writer_virtual_ip") %>
  mode          exclusive
</role>

<% if scope.lookupvar("readers") != [] %>
<role reader>
  hosts          <%= readers.flatten.join(', ') %>
  ips            <%= reader_virtual_ips.flatten.join(', ') %>
  mode          balanced
</role>
<% end %>
